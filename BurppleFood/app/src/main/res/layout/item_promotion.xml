<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_food_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    >


    <RelativeLayout
        android:id="@+id/rl_item_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_item_promotion"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:src="@drawable/burpple_exclusive"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_burpple_exclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BURPPLE EXCLUSIVE"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#BDBDBD"
            android:background="@drawable/shape2"
            />

        <TextView
            android:id="@+id/tv_promotion_title"
            style="@style/white_text_black_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1_for_1 Bara Chirashi"
            android:layout_below="@id/tv_burpple_exclusive"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <View
            android:layout_width="240dp"
            android:layout_height="2dp"
            android:background="@color/colorAccent"
            android:layout_below="@id/tv_promotion_title"
            android:layout_marginTop="24dp"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>



