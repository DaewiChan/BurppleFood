<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_food_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    app:cardElevation="4dp"
    >

    <RelativeLayout
        android:id="@+id/rl_item_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80000000">

        <ImageView
            android:id="@+id/iv_item_promotion"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:src="@drawable/burpple_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_burpple_exclusive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BURPPLE EXCLUSIVE"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:textSize="16sp"
            android:textColor="#BDBDBD"
            android:background="@drawable/shape2"
            />

        <TextView
            android:id="@+id/one_for_one"
            style="@style/white_text_black_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1_for_1 Bara Chirashi"
            android:layout_below="@+id/tv_burpple_exclusive"
            android:layout_centerHorizontal="true"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>



