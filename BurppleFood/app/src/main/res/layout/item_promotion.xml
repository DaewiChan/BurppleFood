<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_food_item_root"
    android:layout_width="180dp"
    android:layout_height="250dp"
    android:layout_margin="8dp"
    android:backgroundTint="#FFF59D"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_item_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_item_promotion"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/burpple_exclusive" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#80000000"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_burpple_exclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/shape2"
                android:padding="4dp"
                android:text="BURPPLE EXCLUSIVE"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_promotion_title"
                style="@style/white_text_black_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1_for_1 Bara Chirashi"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:textSize="20sp"
                android:maxLines="2"/>

            <View
                android:id="@+id/v_promotion_date"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="6dp"
                android:background="#E0E0E0" />

            <TextView
                android:id="@+id/promotion_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TILL 31ST JAN'18 "
                android:textColor="#FFF"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_promotion_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_above="@+id/tv_promotion_shop"
            android:text="Noodle Thai Thai"
            android:textColor="#BDBDBD"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_promotion_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Bugis"
            android:textColor="#BDBDBD"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>



