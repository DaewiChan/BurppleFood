<?xml version="1.0" encoding="utf-8"?>
<com.daewichan.burpplefood.viewitems.ImageInBurppleFoodViewItem
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/burpple_image"
            android:fitsSystemWindows="true"
            android:foreground="#80000000"
            />

        <TextView
            android:id="@+id/tv_community"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMUNITY"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:padding="4dp"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/communityshape"/>

        <TextView
            android:id="@+id/tv_highlights"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAWKER HIGHLIGHTS "
            android:layout_below="@id/tv_community"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="32sp"
            android:textColor="#FFF"/>

    </RelativeLayout>



</com.daewichan.burpplefood.viewitems.ImageInBurppleFoodViewItem>