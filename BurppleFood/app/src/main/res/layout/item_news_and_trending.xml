<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_burpple_guide_item_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    app:cardElevation="4dp"
    >
    <RelativeLayout
        android:id="@+id/rl_item_burpple_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_item_burpple_guides"
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:src="@drawable/burpple_image"
            android:background="#700000"/>
        <TextView
            android:id="@+id/tv_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best"
            android:layout_centerInParent="true"
            android:textSize="24sp"
            android:textColor="#000"
            android:background="@drawable/shape2"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/tv_drawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_restaurant"
            android:layout_below="@id/tv_best"
            android:background="@drawable/drawableshape"
            />
        <TextView
            android:id="@+id/tv_guide_burpple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="burpple"
            android:layout_below="@id/tv_best"
            android:layout_toRightOf="@id/tv_drawable"
            android:layout_alignBaseline="@id/tv_drawable"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            style="@style/white_text_black_border"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>
