<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rl_item_burpple_guide"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
       <android.support.v7.widget.CardView
           android:id="@+id/cv_img_burpple_guide"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:elevation="4dp"
           android:layout_marginBottom="16dp">
           <ImageView
               android:id="@+id/iv_item_burpple_guides"
               android:layout_width="40dp"
               android:layout_height="30dp"
               android:src="@drawable/burpple_image"
               android:background="@drawable/shape2"
               android:scaleType="centerCrop"
               />
       </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/sushi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sushi Kimura"
            android:layout_toRightOf="@id/cv_img_burpple_guide"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="#000"
            />

    </RelativeLayout>

